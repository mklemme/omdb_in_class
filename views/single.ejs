<% include partials/header %>
  <div class="pure-g">
    <div class="pure-u-1-4">
      <img class="pure-img" src="<%= movie.Poster %>">
    </div>
    <div class="pure-u-1-2">
      <div class="inner">
        <h1><%= movie.Title %> <span class="year"><%= movie.Year %></span></h1>
        <p class="plot"><%= movie.Plot %></p>
        <p class="details lightUI director">Director: <span><%= movie.Director %></span></p>
        <p class="details lightUI cast">Cast <span><%= movie.title %></span></p>
      </div>
    </div>
    <div class="pure-u-1-4">
      <li class="details darkUI">Genre: <span><%= movie.Genre %></span> </li>
      <li class="details darkUI">Runtime:</li>
      <a href="#" class="favButton">Add to favorites</a>
    </div>
  </div>
  <script>
    title = "<%= movie.Title %>";
    id = "<%= movie.imdbID %>";
    img = "<%= movie.Poster %>";
    favoritedMovie = <%= favoritedMovie %>;
  </script>
<% include partials/footer %>
